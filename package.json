{
  "name": "shop3_server",
  "version": "1.0.0",
  "description": "Shop3 API",
  "private": true,
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon server.js",
    "start": "cross-env NODE_ENV=production node server.js",
    "lint": "npx eslint server.js src/**/*.js --fix",
    "migrate": "cd src && npx sequelize-cli db:migrate",
    "seed": "cd src && npx sequelize-cli db:seed:all",
    "sync:test": "cross-env NODE_ENV=test node ./test/setup/jest.sync.js",
    "seed:test": "cd src && npx sequelize-cli db:seed:all --env=test",
    "test": "cross-env NODE_ENV=test PORT=3100 jest --detectOpenHandles"
  },
  "nodemonConfig": {
    "watch": [
      "src",
      "docs",
      "server.js",
      ".env"
    ],
    "ext": "js, json, yaml",
    "ignore": [
      "src/migrations/*",
      "src/seeders/*"
    ]
  },
  "author": "shop3_developers",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.590.0",
    "@aws-sdk/lib-storage": "^3.590.0",
    "@google-cloud/storage": "^7.9.0",
    "@sendgrid/mail": "^8.1.3",
    "axios": "^1.7.2",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dayjs": "^1.11.11",
    "dotenv": "^16.4.5",
    "ethers": "^6.12.1",
    "express": "^4.19.2",
    "express-body-parser-error-handler": "^1.0.7",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mariadb": "^3.3.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "sequelize": "^6.37.1",
    "sharp": "^0.33.4",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^9.0.1",
    "winston": "^3.13.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "jest": "^29.7.0",
    "jest-html-reporters": "^3.1.7",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "sequelize-cli": "^6.6.2",
    "supertest": "^6.3.4"
  }
}
